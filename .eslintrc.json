{
  "plugins": ["cypress"],
  "env": {
      "browser": true,
      "es2021": true,
      "cypress/globals": true
  },
  "extends": ["eslint:recommended", "plugin:cypress/recommended"],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "rules": {
      "indent": [
          "error",
          "tab"
      ],
      "linebreak-style": [
          "error",
          "windows"
      ],
      "quotes": [
          "error",
          "double"
      ],
      "semi": [
          "error",
          "always"
      ]
  }
}
